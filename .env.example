# =========================================
# aic-smb-copilot-v2 - Environment Template
# Copy to .env and adjust values as needed
# =========================================

# ========== GLOBAL CONFIG ==========
NODE_ENV=development
APP_PORT=8080
WEB_PORT=3000
PYTHONUNBUFFERED=1

# ========== API GATEWAY CONFIG ==========
API_HOST=0.0.0.0
API_PORT=8080
API_LOG_LEVEL=debug

# JWT & OAUTH
JWT_SECRET=your_jwt_secret_here
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# ========== POSTGRES CONFIG ==========
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aic_smb_copilot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# DATABASE URL FOR ORM (Prisma, etc.)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aic_smb_copilot

# ========== QDRANT CONFIG ==========
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key

# ========== LLM PROVIDER CONFIG ==========
# Supports OpenAI, Anthropic, etc.
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# AI Model settings
DEFAULT_LLM_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002

# ========== WORKERS CONFIG ==========
WORKER_CONCURRENCY=4
WORKER_QUEUE=ai-tasks
WORKER_LOG_LEVEL=info

# ========== REDIS (OPTIONAL) ==========
REDIS_HOST=localhost
REDIS_PORT=6379

# ========== OBSERVABILITY ==========
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=debug
PROMETHEUS_ENDPOINT=http://localhost:9090

# ========== FEATURE FLAGS ==========
ENABLE_NEW_DASHBOARD=false
ENABLE_EXPERIMENTAL_LLM_FLOW=true

# ========== FRONTEND CONFIG ==========
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXTAUTH_URL=http://localhost:3000

# ========== MISC ==========
SESSION_SECRET=your_session_secret
ALLOW_DEV_LOGIN=true